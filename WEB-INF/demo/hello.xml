<?xml version="1.0" encoding="UTF-8"?>
<view title="Test" labelDirection="horizontal" do="content.Content">
	<grid fluid="false" span="10">
		<form>
			<input name="userId" label="帐号" validation="alpha" prepend="@"></input>
			<input name="name" label="商品名称" validation="alpha" prepend="书"
				append="None" labelDirection="horizontal" disabled="true"></input>
			<input name="age" label="年龄" validation="int(0, 100)" append="岁"></input>
			<select name="city" label="城市" options="a:Test, b:天津, c:天津f, d:天津d, e:天津fg"
				selected="c" multiple="true" />
			<file name="place" label="文件" validation="alpha"></file>
			<input name="address" label="地址" validation="alpha"></input>
			<group offset="1">
				<button value="提交" type="submit" />
				<button value="重置" type="reset" />
				<checkbox label="去不去" name="age" checked="true"></checkbox>
				<checkbox label="来不来" name="age" checked="true"></checkbox>
				<radio label="来不来" name="age"></radio>
				<radio label="点点滴滴" name="age" disabled="true"></radio>
			</group>
			<popup title="TTest" name="hah">
				<input name="userId" label="帐号" validation="alpha" prepend="@"></input>
				<input name="name" label="商品名称" validation="alpha" prepend="书"
					append="None" labelDirection="horizontal" disabled="true"></input>
				<input name="age" label="年龄" validation="int(0, 100)" append="岁"></input>
				<select name="city" label="城市"
					options="a:Test, b:天津, c:天津f, d:天津d, e:天津fg" selected="c" multiple="true" />
				<file name="place" label="文件" validation="alpha"></file>
				<input name="address" label="地址" validation="alpha"></input>
			</popup>
		</form>

	</grid>
</view>